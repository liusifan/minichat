include ../../comm.mk

include ../../phxrpc/phxrpc.mk

CFLAGS += $(REDIS_CLIENT_INCLUDE) -I$(MINICHAT_ROOT)/minichat

LDFLAGS := $(PLUGIN_ELPP_LDFLAGS) \
	-L$(MINICHAT_ROOT)/minichat/common -lcommon \
	-L$(PHXRPC_ROOT)/lib -lphxrpc \
	$(LDFLAGS) \
	$(REDIS_CLIENT_LIBRARY)

#choose to use boost for network
#LDFLAGS := $(PLUGIN_BOOST_LDFLAGS) $(LDFLAGS)

SVR_OBJS = presence.pb.o \
		   presence_service_impl.o \
		   phxrpc_presence_service.o \
		   phxrpc_presence_dispatcher.o \
		   presence_server_config.o \
		   presence_main.o \
		   presence_dao.o

CLI_OBJS = presence.pb.o \
		   presence_client.o \
		   phxrpc_presence_stub.o

TARGETS = libpresence_client.a presence-main presence_tool_main

all: $(TARGETS)

presence-main: $(SVR_OBJS)
	$(LINKER) $^ $(LDFLAGS) -o $@

libpresence_client.a: $(CLI_OBJS)
	$(AR) $@ $^

presence_tool_main: phxrpc_presence_tool.o presence_tool_impl.o presence_tool_main.o
	$(LINKER) $^ -L. -lpresence_client $(LDFLAGS) -o $@

########## message ##########

presence.pb.cc: presence.pb.h

presence.pb.h: presence.proto
	$(PROTOBUF_ROOT)/bin/protoc -I$(PROTOBUF_ROOT)/include --cpp_out=. -I$(PHXRPC_ROOT) -I. $^

########## client ##########

phxrpc_presence_stub.cpp: phxrpc_presence_stub.h
phxrpc_presence_stub.o: phxrpc_presence_stub.h
presence_client.cpp: phxrpc_presence_stub.h
presence_client.o: phxrpc_presence_stub.h

phxrpc_presence_stub.h: presence.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2client $(PBFLAGS) -f $^ -d .

########## service ##########

phxrpc_presence_service.cpp: phxrpc_presence_service.h
phxrpc_presence_service.o: phxrpc_presence_service.h
presence_service_impl.cpp: phxrpc_presence_service.h
presence_service_impl.o: phxrpc_presence_service.h
phxrpc_presence_dispatcher.cpp: phxrpc_presence_service.h
phxrpc_presence_dispatcher.o: phxrpc_presence_service.h

phxrpc_presence_service.h: presence.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2service $(PBFLAGS) -f $^ -d .

########## tool ##########

phxrpc_presence_tool.cpp: phxrpc_presence_tool.h
phxrpc_presence_tool.o: phxrpc_presence_tool.h
presence_tool_impl.cpp: phxrpc_presence_tool.h
presence_tool_impl.o: phxrpc_presence_tool.h
presence_tool_main.cpp: phxrpc_presence_tool.h
presence_tool_main.o: phxrpc_presence_tool.h

phxrpc_presence_tool.h: presence.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2tool $(PBFLAGS) -f $^ -d .

clean:
	@($(RM) $(TARGETS))
	@($(RM) *.o)
	@($(RM) phxrpc_*)
	@($(RM) *.pb.*)

