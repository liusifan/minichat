# Makefile
#
# Generated by phxrpc_pb2server from profile.proto
#
#

include ../../comm.mk

include ../../phxrpc/phxrpc.mk

CFLAGS += $(REDIS_CLIENT_INCLUDE) -I$(MINICHAT_ROOT)/minichat

LDFLAGS := $(PLUGIN_ELPP_LDFLAGS) \
	-L$(MINICHAT_ROOT)/minichat/common -lcommon \
	-L$(PHXRPC_ROOT)/lib -lphxrpc \
	$(LDFLAGS) \
	$(REDIS_CLIENT_LIBRARY)

#choose to use boost for network
#LDFLAGS := $(PLUGIN_BOOST_LDFLAGS) $(LDFLAGS)

SVR_OBJS = profile.pb.o \
		   profile_service_impl.o \
		   phxrpc_profile_service.o \
		   phxrpc_profile_dispatcher.o \
		   profile_server_config.o \
		   profile_main.o \
		   profile_dao.o

CLI_OBJS = profile.pb.o \
		   profile_client.o \
		   phxrpc_profile_stub.o

TARGETS = libprofile_client.a profile-main profile_tool_main

all: $(TARGETS)

profile-main: $(SVR_OBJS)
	$(LINKER) $^ $(LDFLAGS) -o $@

libprofile_client.a: $(CLI_OBJS)
	$(AR) $@ $^

profile_tool_main: phxrpc_profile_tool.o profile_tool_impl.o profile_tool_main.o
	$(LINKER) $^ -L. -lprofile_client $(LDFLAGS) -o $@

########## message ##########

profile.pb.cc: profile.pb.h

profile.pb.h: profile.proto
	$(PROTOBUF_ROOT)/bin/protoc -I$(PROTOBUF_ROOT)/include --cpp_out=. -I$(PHXRPC_ROOT) -I. $^

########## client ##########

phxrpc_profile_stub.cpp: phxrpc_profile_stub.h
phxrpc_profile_stub.o: phxrpc_profile_stub.h
profile_client.cpp: phxrpc_profile_stub.h
profile_client.o: phxrpc_profile_stub.h

phxrpc_profile_stub.h: profile.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2client $(PBFLAGS) -f $^ -d .

########## service ##########

phxrpc_profile_service.cpp: phxrpc_profile_service.h
phxrpc_profile_service.o: phxrpc_profile_service.h
profile_service_impl.cpp: phxrpc_profile_service.h
profile_service_impl.o: phxrpc_profile_service.h
phxrpc_profile_dispatcher.cpp: phxrpc_profile_service.h
phxrpc_profile_dispatcher.o: phxrpc_profile_service.h

phxrpc_profile_service.h: profile.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2service $(PBFLAGS) -f $^ -d .

########## tool ##########

phxrpc_profile_tool.cpp: phxrpc_profile_tool.h
phxrpc_profile_tool.o: phxrpc_profile_tool.h
profile_tool_impl.cpp: phxrpc_profile_tool.h
profile_tool_impl.o: phxrpc_profile_tool.h
profile_tool_main.cpp: phxrpc_profile_tool.h
profile_tool_main.o: phxrpc_profile_tool.h

phxrpc_profile_tool.h: profile.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2tool $(PBFLAGS) -f $^ -d .

clean:
	@($(RM) $(TARGETS))
	@($(RM) *.o)
	@($(RM) phxrpc_*)
	@($(RM) *.pb.*)

