include ../../comm.mk

include ../../phxrpc/phxrpc.mk

CFLAGS += $(REDIS_CLIENT_INCLUDE) -I$(MINICHAT_ROOT)/minichat

LDFLAGS := $(PLUGIN_ELPP_LDFLAGS) \
	-L$(MINICHAT_ROOT)/minichat/common -lcommon \
	-L$(MINICHAT_ROOT)/minichat/seq -lseq_client \
	-L$(PHXRPC_ROOT)/lib -lphxrpc \
	$(LDFLAGS) \
	$(REDIS_CLIENT_LIBRARY)

#choose to use boost for network
#LDFLAGS := $(PLUGIN_BOOST_LDFLAGS) $(LDFLAGS)

SVR_OBJS = msgbox.pb.o \
	   msgbox_service_impl.o \
	   phxrpc_msgbox_service.o \
	   phxrpc_msgbox_dispatcher.o \
	   msgbox_server_config.o \
	   msgbox_main.o \
	   msgbox_dao.o

CLI_OBJS = msgbox.pb.o \
	   msgbox_client.o \
	   phxrpc_msgbox_stub.o

TARGETS = libmsgbox_client.a msgbox-main msgbox_tool_main

all: $(TARGETS)

msgbox-main: $(SVR_OBJS)
	$(LINKER) $^ $(LDFLAGS) -o $@

libmsgbox_client.a: $(CLI_OBJS)
	$(AR) $@ $^

msgbox_tool_main: phxrpc_msgbox_tool.o msgbox_tool_impl.o msgbox_tool_main.o
	$(LINKER) $^ -L. -lmsgbox_client $(LDFLAGS) -o $@

########## message ##########

msgbox.pb.cc: msgbox.pb.h

msgbox.pb.h: msgbox.proto
	$(PROTOBUF_ROOT)/bin/protoc -I$(PROTOBUF_ROOT)/include --cpp_out=. -I$(PHXRPC_ROOT) -I. $^

########## client ##########

phxrpc_msgbox_stub.cpp: phxrpc_msgbox_stub.h
phxrpc_msgbox_stub.o: phxrpc_msgbox_stub.h
msgbox_client.cpp: phxrpc_msgbox_stub.h
msgbox_client.o: phxrpc_msgbox_stub.h

phxrpc_msgbox_stub.h: msgbox.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2client $(PBFLAGS) -f $^ -d .

########## service ##########

phxrpc_msgbox_service.cpp: phxrpc_msgbox_service.h
phxrpc_msgbox_service.o: phxrpc_msgbox_service.h
msgbox_service_impl.cpp: phxrpc_msgbox_service.h
msgbox_service_impl.o: phxrpc_msgbox_service.h
phxrpc_msgbox_dispatcher.cpp: phxrpc_msgbox_service.h
phxrpc_msgbox_dispatcher.o: phxrpc_msgbox_service.h

phxrpc_msgbox_service.h: msgbox.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2service $(PBFLAGS) -f $^ -d .

########## tool ##########

phxrpc_msgbox_tool.cpp: phxrpc_msgbox_tool.h
phxrpc_msgbox_tool.o: phxrpc_msgbox_tool.h
msgbox_tool_impl.cpp: phxrpc_msgbox_tool.h
msgbox_tool_impl.o: phxrpc_msgbox_tool.h
msgbox_tool_main.cpp: phxrpc_msgbox_tool.h
msgbox_tool_main.o: phxrpc_msgbox_tool.h

phxrpc_msgbox_tool.h: msgbox.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2tool $(PBFLAGS) -f $^ -d .

clean:
	@($(RM) $(TARGETS))
	@($(RM) *.o)
	@($(RM) phxrpc_*)
	@($(RM) *.pb.*)

