		   addrbook_client.o \
		   phxrpc_addrbook_stub.o

TARGETS = libaddrbook_client.a addrbook_main addrbook_tool_main

all: $(TARGETS)

addrbook_main: $(SVR_OBJS)
	$(LINKER) $^ $(LDFLAGS) -o $@

libaddrbook_client.a: $(CLI_OBJS)
	$(AR) $@ $^

addrbook_tool_main: phxrpc_addrbook_tool.o addrbook_tool_impl.o addrbook_tool_main.o
	$(LINKER) $^ -L. -laddrbook_client $(LDFLAGS) -o $@

