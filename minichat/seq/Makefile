# Makefile
#
# Generated by phxrpc_pb2server from seq.proto
#
#

include ../../comm.mk

include ../../phxrpc/phxrpc.mk

CFLAGS += $(REDIS_CLIENT_INCLUDE) -I$(MINICHAT_ROOT)/minichat

LDFLAGS := $(PLUGIN_ELPP_LDFLAGS) \
	-L$(MINICHAT_ROOT)/minichat/common -lcommon \
	-L$(PHXRPC_ROOT)/lib -lphxrpc \
	$(LDFLAGS) \
	$(REDIS_CLIENT_LIBRARY)

#choose to use boost for network
#LDFLAGS := $(PLUGIN_BOOST_LDFLAGS) $(LDFLAGS)

SVR_OBJS = seq.pb.o \
		   seq_service_impl.o \
		   phxrpc_seq_service.o \
		   phxrpc_seq_dispatcher.o \
		   seq_server_config.o \
		   seq_main.o \
		   seq_dao.o

CLI_OBJS = seq.pb.o \
		   seq_client.o \
		   phxrpc_seq_stub.o

TARGETS = libseq_client.a seq-main seq_tool_main

all: $(TARGETS)

seq-main: $(SVR_OBJS)
	$(LINKER) $^ $(LDFLAGS) -o $@

libseq_client.a: $(CLI_OBJS)
	$(AR) $@ $^

seq_tool_main: phxrpc_seq_tool.o seq_tool_impl.o seq_tool_main.o
	$(LINKER) $^ -L. -lseq_client $(LDFLAGS) -o $@

########## message ##########

seq.pb.cc: seq.pb.h

seq.pb.h: seq.proto
	$(PROTOBUF_ROOT)/bin/protoc -I$(PROTOBUF_ROOT)/include --cpp_out=. -I$(PHXRPC_ROOT) -I. $^

########## client ##########

phxrpc_seq_stub.cpp: phxrpc_seq_stub.h
phxrpc_seq_stub.o: phxrpc_seq_stub.h
seq_client.cpp: phxrpc_seq_stub.h
seq_client.o: phxrpc_seq_stub.h

phxrpc_seq_stub.h: seq.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2client $(PBFLAGS) -f $^ -d .

########## service ##########

phxrpc_seq_service.cpp: phxrpc_seq_service.h
phxrpc_seq_service.o: phxrpc_seq_service.h
seq_service_impl.cpp: phxrpc_seq_service.h
seq_service_impl.o: phxrpc_seq_service.h
phxrpc_seq_dispatcher.cpp: phxrpc_seq_service.h
phxrpc_seq_dispatcher.o: phxrpc_seq_service.h

phxrpc_seq_service.h: seq.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2service $(PBFLAGS) -f $^ -d .

########## tool ##########

phxrpc_seq_tool.cpp: phxrpc_seq_tool.h
phxrpc_seq_tool.o: phxrpc_seq_tool.h
seq_tool_impl.cpp: phxrpc_seq_tool.h
seq_tool_impl.o: phxrpc_seq_tool.h
seq_tool_main.cpp: phxrpc_seq_tool.h
seq_tool_main.o: phxrpc_seq_tool.h

phxrpc_seq_tool.h: seq.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2tool $(PBFLAGS) -f $^ -d .

clean:
	@($(RM) $(TARGETS))
	@($(RM) *.o)
	@($(RM) phxrpc_*)
	@($(RM) *.pb.*)

